<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_140sdp">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/gradMid"
        app:cardCornerRadius="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            app:cardCornerRadius="@dimen/_8sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgIconNearByInfoWindow"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:elevation="@dimen/_4sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_bin"
                    app:layout_constraintBottom_toTopOf="@+id/txtTitleNearbyDistanceInfoWindo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/gradMid" />


                <TextView
                    android:id="@+id/txtTitleNearbyInfoWindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Location address"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toTopOf="@+id/txtTitleNearbyDistanceInfoWindo"
                    app:layout_constraintEnd_toEndOf="@+id/txtTitleNearbyDistanceInfoWindo"
                    app:layout_constraintStart_toStartOf="@+id/txtTitleNearbyDistanceInfoWindo" />

                <TextView
                    android:id="@+id/txtTitleNearbyDistanceInfoWindo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="0.0 km"
                    android:textAlignment="center"
                    android:textColor="@color/gradMid"
                    app:layout_constraintBottom_toTopOf="@+id/view2"
                    app:layout_constraintEnd_toEndOf="@+id/txtGo"
                    app:layout_constraintStart_toStartOf="@+id/txtGo" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/white"
                    android:elevation="@dimen/_4sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txtGo"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@drawable/shape_button_background"
                    android:elevation="@dimen/_4sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:text="Navigate"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/view2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>